@article{gill_chronic_2014,
	title        = {Chronic impairment of bumblebee natural foraging behaviour induced by sublethal pesticide exposure},
	author       = {Gill, Richard J. and Raine, Nigel E.},
	year         = 2014,
	journal      = {Functional Ecology},
	volume       = 28,
