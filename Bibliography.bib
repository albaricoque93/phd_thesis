@article{pettersson_pollination_1991,
	title        = {Pollination by a {Guild} of {Fluctuating} {Moth} {Populations}: {Option} for {Unspecialization} in {Silene} {Vulgaris}},
	shorttitle   = {Pollination by a {Guild} of {Fluctuating} {Moth} {Populations}},
	author       = {Pettersson, M. W.},
	year         = 1991,
